<script>
  document.addEventListener('DOMContentLoaded', function () {
    const identified = window.sessionStorage.getItem('or_identified') === 'true';
    const referrer = document.referrer;
    const language = navigator.language || navigator.userLanguage;
    setTimeout(() => {
	   	if (window.__OPENREPLAY__ && window.__OPENREPLAY__.analytics) {
						window.__OPENREPLAY__.analytics.events.setProperty('test_prop', 'test_val')
	        	window.__OPENREPLAY__.analytics.events.track('page_visit', { url: document.location.pathname })
	
						if (!identified) {
							const time = new Date();
							const hrs = time.getHours();
							const ssid = document.title.toLowerCase().replaceAll(' ', '').slice(0, 20) + hrs;
				      window.__OPENREPLAY__.analytics.people.identify(ssid);
							window.__OPENREPLAY__.analytics.people.setProperties({ 
								ref: referrer, 
								lang: language, 
								pages: 0, 
								urls: document.location.pathname 
							});
							window.sessionStorage.setItem('or_identified', 'true');
						} else {
							window.__OPENREPLAY__.analytics.people.increment('pages', 1);
							window.__OPENREPLAY__.analytics.people.appendValues('urls', document.location.pathname);
						}
					}
	  }, 5000);
  })
</script>


