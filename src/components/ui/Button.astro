---
import { type JSX } from "astro/jsx-runtime";

interface Props {
  label: string;
  href: string;
  variant?: "primary" | "secondary" | "outline" | "ghost" | "text";
  leftIcon?: JSX.Element;
  rightIcon?: JSX.Element;
}

const { label, href, variant = "primary", leftIcon, rightIcon } = Astro.props;

const variantClasses = {
  primary: "bg-blue-600 hover:bg-blue-600",
  secondary: "bg-gray-600 hover:bg-gray-700",
  outline: "border border-blue-600 text-blue-600",
  ghost: "bg-transparent text-gray-700",
  text: "bg-transparent hover:bg-indigo-100",
}[variant];
---
<a
  href={href}
  class={`no-underline hover:no-underline flex items-center gap-2 px-4 py-2 h-8 rounded-lg font-medium transition-all duration-200 ${variantClasses}`}
>
  {leftIcon && <span>{leftIcon}</span>}
  <span>{label}</span>
  {rightIcon && <span>{rightIcon}</span>}
</a>